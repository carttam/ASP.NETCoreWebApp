@model ASP.NETCoreWebApp.Models.Attribute
@{
    Layout = null;
}
<div class="modal-dialog">
    <div class="modal-content">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            <h4 class="modal-title">@Model.Object.title</h4>
        </div>
        <div class="modal-body">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Attribute</th>
                        <th>Value</th>
                    </tr>
                </thead>
                <tbody>
                    @{
                        var title = Model.titles.Split(",");
                        var data = Model.datas.Split(",");
                    }
                    @for (var i = 0; i < title.Length; i++)
                    {
                        <tr>
                            <td>
                                @title[i]
                            </td>
                            <td>
                                @data[i]
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            <p>
                @Model.Object.description
            </p>
        </div>
        <div class="modal-footer">
            Price : $ <strong>@string.Format("{0:#,0.000}",Model.Object.price)</strong>
        </div>
    </div>
</div>