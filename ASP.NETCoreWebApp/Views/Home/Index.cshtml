                    <div class="progress-bar progress-bar-danger" role="progressbar" aria-valuenow="70" aria-valuemin="0" aria-valuemax="100"
                         style="width: 70%">
                        <span class="sr-only">70% Complete (success)</span>
                        2hr 35 mins left
                    </div>
                </div>
                <a href="#">click here to know more </a>
            </div>
            <!-- /.div -->
        </div>
        <!-- /.col -->
        <div class="col-md-9" id="cat">
            <div>
                <ol class="breadcrumb">
                    <li><a asp-controller="home" asp-action="index">Home</a></li>
                    <li class="active" id="categorie">None</li>
                </ol>
            </div>
            <!-- /.div -->
            <div class="row">
                <div class="btn-group alg-right-pad">
                    <button type="button" class="btn btn-default"><strong id="categorie-count">0  </strong>items</button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
                            Sort Products &nbsp;
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
                            @foreach (var cat in ViewBag.subCategoris)
                            {
                                <li><a href="#cat" onclick="loadByCat('@cat.title')">By @cat.title</a></li>
                            }
                        </ul>
                    </div>
                </div>
            </div>
            <!-- /.row -->
            <div class="row" id="display-by-categorie">
                <!-- Loaded Data -->
                <!-- /.col -->
            </div>
            <!-- /.row -->
            <div class="row">
                <ul class="pagination alg-right-pad" id="cat-page">
                    <li><a href="#cat" onclick="loadLastPage('cat')">&laquo;</a></li>
                    <li><a href="#cat" onclick="loadNextPage('cat')">&raquo;</a></li>
                </ul>
            </div>
            <!-- /.row -->
            <div id="order">
                <ol class="breadcrumb">
                    <li><a asp-controller="home" asp-action="index">Home</a></li>
                    <li><a asp-controller="home" asp-action="index">Index</a></li>
                    <li class="active" id="order-by">None</li>
                </ol>
            </div>
            <!-- /.div -->
            <div class="row">
                <div class="btn-group alg-right-pad">
                    <button type="button" class="btn btn-default"><strong id="order-count">0 </strong>items</button>
                    <div class="btn-group">
                        <button type="button" class="btn btn-primary dropdown-toggle" data-toggle="dropdown">
                            Sort Products &nbsp;
                            <span class="caret"></span>
                        </button>
                        <ul class="dropdown-menu">
