    <div class="row">
        <div class="col-md-3">
            <div>
                @{
                    int counter = 0;
                    string[] color = { "-success", "-info", "-warning", "-danger" };
                }
                @foreach (var categorie in ViewBag.categoris)
                {
                    <a href="#" class="list-group-item active @string.Join(null,"list-group-item",color[counter])">
                        @categorie.title
                    </a>
                    string fColor = color[counter];
                    <ul class="list-group">
                        @foreach (var subCategorie in categorie.subCategoris)
                        {
                            <li class="list-group-item">
                                @subCategorie.title
                                <span class="label label-primary pull-right @{ @string.Join(null,"label",fColor); } ">@subCategorie.Objects.Count</span>
                            </li>
                        }
                    </ul>
                    @if (counter + 1 == color.Length)
                    {
                        counter = 0;
                    }
                    else
                    {
                        counter++;
                    }
                }
            </div>
            <!-- /.div -->
            <div>
                <ul class="list-group">
                    <li class="list-group-item list-group-item-success"><a href="#">New Offer's Coming </a></li>
                    <li class="list-group-item list-group-item-info"><a href="#">New Products Added</a></li>
                    <li class="list-group-item list-group-item-warning"><a href="#">Ending Soon Offers</a></li>
                    <li class="list-group-item list-group-item-danger"><a href="#">Just Ended Offers</a></li>
                </ul>
            </div>
            <!-- /.div -->
